{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Kayord.Pos.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Kayord.Pos.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Kayord.Pos.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "docker-build",
            "label": "docker-build: debug",
            "dependsOn": [
                "build"
            ],
            "dockerBuild": {
                "tag": "kayordposapi:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/src/Kayord.POS/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Kayord.POS/Kayord.Pos.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build: release",
            "dependsOn": [
                "build"
            ],
            "dockerBuild": {
                "tag": "kayordposapi:latest",
                "dockerfile": "${workspaceFolder}/src/Kayord.POS/Dockerfile",
                "context": "${workspaceFolder}",
                "platform": {
                    "os": "windows",
                    "architecture": "amd64"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Kayord.POS/Kayord.Pos.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build: debug"
            ],
            "dockerRun": {
                "os": "Windows"
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Kayord.POS/Kayord.Pos.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: release",
            "dependsOn": [
                "docker-build: release"
            ],
            "dockerRun": {
                "os": "Windows"
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Kayord.POS/Kayord.Pos.csproj"
            }
        },
        {
            "label": "EF Migration Add",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "ef",
                "migrations",
                "add",
                "${input:migrationId}",
                "--project",
                "src/Kayord.Pos",
                "--startup-project",
                "src/Kayord.Pos",
                "-o",
                "Data/Migrations"
            ],
            "problemMatcher": "$msCompile",
            "options": {}
        },
        {
            "label": "EF Migration Remove",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "ef",
                "migrations",
                "remove",
                "--project",
                "src/Kayord.Pos",
                "--startup-project",
                "src/Kayord.Pos",
                "--context",
                "AppDbContext"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                }
            }
        },
        {
            "label": "EF Revert",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "ef",
                "database",
                "update",
                "${input:lastgoodmigration}",
                "--project",
                "src/Kayord.Pos",
                "--startup-project",
                "src/Kayord.Pos",
                "--context",
                "AppDbContext"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                }
            }
        },
    ],
    "inputs": [
        {
            "id": "migrationId",
            "type": "promptString",
            "default": "migrationName",
            "description": "dotnet ef with required options"
        },
        {
            "id": "lastgoodmigration",
            "type": "promptString",
            "default": "migrationName",
            "description": "last good migration to revert to"
        }
    ]
}